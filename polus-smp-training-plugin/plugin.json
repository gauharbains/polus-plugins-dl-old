{
    "name": "SMP Training",
    "version": "0.1.2",
    "title": "SMP Training",
    "description": "Segmentation models training plugin",
    "author": "Gauhar Bains (gauhar.bains@labshare.org)",
    "institution": "National Center for Advancing Translational Sciences, National Institutes of Health",
    "repository": "https://github.com/labshare/polus-plugins",
    "website": "https://ncats.nih.gov/preclinical/core/informatics",
    "citation": "",
    "containerId": "labshare/polus-smp-training-plugin:0.1.2",
    "inputs": [
      {
        "name": "modelName",
        "type": "enum",
        "options": {
          "values": [
              "unet",
              "unetpp",
              "Linknet",
              "FPN",
              "PSPNet",
              "PAN",
              "DeepLabV3",
              "DeepLabV3Plus"
          ]
      },
        "description": "model to use",
        "required": true
      },
      {
        "name": "encoderName",
        "type": "string",
        "description": "encoder to use",
        "required": true
      },
      {
        "name": "encoderWeights",
        "type": "string",
        "description": "Pretrained weights for the encoder",
        "required": true
      },
      {
        "name": "epochs",
        "type": "number",
        "description": "Number of training epochs",
        "required": true
      },
      {
        "name": "imagesPattern",
        "type": "string",
        "description": "Filename pattern for images",
        "required": true
      },
      {
        "name": "labelsPattern",
        "type": "string",
        "description": "Filename pattern for labels",
        "required": true
      },
      {
        "name": "imagesDir",
        "type": "collection",
        "description": "Collection containing images",
        "required": true
      },
      {
        "name": "labelsDir",
        "type": "collection",
        "description": "Collection containing labels",
        "required": true
      },
      {
        "name": "loss",
        "type": "enum",
        "options": {
          "values": [
              "Dice",
              "Jaccard"
          ]
      },
        "description": "Loss function to use",
        "required": true
      },
      {
        "name": "metric",
        "type": "enum",
        "options": {
          "values": [
              "IoU",
              "Fscore",
              "Precision",
              "Accuracy",
              "Recall"
          ]
      },
        "description": "Performance metric to use",
        "required": true
      },
      {
        "name": "batchSize",
        "type": "string",
        "description": "Batch Size",
        "required": true
      }
    ],
    "outputs": [
      {
        "name": "outDir",
        "type": "genericData",
        "description": "Output model"
      }
    ],
    "ui": [
      {
        "key": "inputs.modelName",
        "title": "Model Name",
        "description": "model to use"
      },
      {
        "key": "inputs.encoderName",
        "title": "Encoder Name",
        "description": "encoder to use"
      },
      {
        "key": "inputs.encoderWeights",
        "title": "Encoder Weights",
        "description": "Pretrained weights for the encoder"
      },
      {
        "key": "inputs.epochs",
        "title": "Epochs",
        "description": "Number of training epochs"
      },
      {
        "key": "inputs.imagesPattern",
        "title": "Images filename pattern",
        "description": "Filename pattern for images"
      },
      {
        "key": "inputs.labelsPattern",
        "title": "Labels filename pattern",
        "description": "Filename pattern for labels"
      },
      {
        "key": "inputs.imagesDir",
        "title": "Image collection",
        "description": "Collection containing images"
      },
      {
        "key": "inputs.labelsDir",
        "title": "Labels collection",
        "description": "Collection containing labels"
      },
      {
        "key": "inputs.loss",
        "title": "Loss",
        "description": "Loss function to use"
      },
      {
        "key": "inputs.metric",
        "title": "Metric",
        "description": "Performance metric"
      },
      {
        "key": "inputs.batchSize",
        "title": "Batch Size",
        "description": "Batch Size"
      }
    ]
  }